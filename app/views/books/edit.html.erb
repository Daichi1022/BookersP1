<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-messages">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book) do |f| %>

  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book', class: "submit-button" %>
  </div>

  <div class="links">
    <%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %> |
    <%= link_to "Back", books_path, class: "back" %>
  </div>

<% end %>